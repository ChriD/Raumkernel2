# Makefile template for shared library
 
INCPATH = -I includes/

CC = arm-linux-gnueabihf-g++-4.8
CXX = arm-linux-gnueabihf-g++-4.8
CFLAGS = -std=c++0x -fPIC -Wall -Wno-unknown-pragmas -Wextra -O2 -c -pthread $(INCPATH)
CXXFLAGS = -std=c++0x -fPIC -Wall -Wno-unknown-pragmas -Wextra -O2 -c -pthread $(INCPATH)
LDFLAGS = -shared -pthread -static-libgcc -static-libstdc++

LIBSDEF = libs/linux_ARMV7/libohNetCore.a libs/linux_ARMV7/libohNetDevices.a libs/linux_ARMV7/libohNetProxies.a

RM = rm -f 
TARGET_LIB = libs/linux_ARMV7/raumkern.so

SRCS = $(wildcard *.cpp)
SRCS += $(wildcard device/*.cpp)
SRCS += $(wildcard device/eventParser/*.cpp)
SRCS += $(wildcard device/proxies/*.cpp)
SRCS += $(wildcard httpclient/*.cpp)
SRCS += $(wildcard logger/*.cpp)
SRCS += $(wildcard manager/*.cpp)
SRCS += $(wildcard media/*.cpp)
SRCS += $(wildcard media/item/*.cpp)
SRCS += $(wildcard tools/*.cpp)

OBJS = $(SRCS:.cpp=.o)

#.PHONY: test
#test: $(SRCS)
#	$(CC) -o $(TARGET_LIB) $(SRCS) -shared -fPIC -Wall -Wextra -O2


.PHONY: all
all: ${TARGET_LIB}
 
$(TARGET_LIB): $(OBJS)
	$(CC) ${LDFLAGS} -o $@ $^ $(LIBSDEF)
 
$(SRCS:.cpp=.d):%.d:%.cpp
	$(CC) $(CFLAGS) -MM $< >$@
 
include $(SRCS:.cpp=.d)
 

.PHONY: clean
clean:
	-${RM} ${OBJS} $(SRCS:.cpp=.d) 